<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_header_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/purple_200"
    tools:context="fragment.HeaderFragment">

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="@dimen/button_menu"
        android:layout_height="@dimen/button_menu"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/button_menu"
        android:src="@drawable/icon_menu"
        android:background="@drawable/rounded_menu_button" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_header_height"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textSize="24sp"
        android:text="prova testo"/>
</FrameLayout>